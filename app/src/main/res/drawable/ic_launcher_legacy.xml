<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1E3A8A"
                android:centerColor="#3B82F6"
                android:endColor="#60A5FA"
                android:type="linear" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- Icon content -->
    <item android:gravity="center">
        <vector
            android:width="48dp"
            android:height="48dp"
            android:viewportWidth="48"
            android:viewportHeight="48">
            
            <!-- Fingerprint icon -->
            <group android:translateX="14" android:translateY="14">
                <path
                    android:pathData="M10,2 C14,2 17,5 17,9 L17,15"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillColor="@android:color/transparent" />
                
                <path
                    android:pathData="M14,9 C14,7 12,5 10,5 C8,5 6,7 6,9 L6,13"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillColor="@android:color/transparent" />
                
                <path
                    android:pathData="M10,8 C10.5,8 11,8.5 11,9 L11,11"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillColor="@android:color/transparent" />
                
                <path
                    android:pathData="M3,9 C3,5 6,2 10,2 C14,2 17,5 17,9"
                    android:strokeColor="#FFFFFF"
                    android:strokeWidth="1.5"
                    android:strokeLineCap="round"
                    android:fillColor="@android:color/transparent" />
            </group>
            
            <!-- Location pin -->
            <group android:translateX="30" android:translateY="30">
                <path
                    android:pathData="M6,2 C7.5,2 9,3.5 9,5 C9,8 6,11 6,11 C6,11 3,8 3,5 C3,3.5 4.5,2 6,2 Z"
                    android:fillColor="#FFFFFF" />
                
                <path
                    android:pathData="M6,3.5 A1.5,1.5 0 1,1 6,6.5 A1.5,1.5 0 1,1 6,3.5 Z"
                    android:fillColor="#1E3A8A" />
            </group>
        </vector>
    </item>
</layer-list>